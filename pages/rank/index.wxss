.rank{
  font-size:30rpx;
  height:100%;
  width: 100%;
  overflow-x: hidden;
  -webkit-overflow-scrolling: touch;
  position: relative;
  background-size: cover;
  background-image: url('https://snsgame.uimg.cn/gamebox/res/images/rank_bg.png');
  box-sizing: border-box;
  padding: 20rpx 40rpx 130rpx 40rpx;
}

.rank .bg {
  width: 100%;
  height: 100%;
}

.rank-poster {
  width: 100%;
  height: 300rpx;
  position: relative;
}

.rank-poster image {
  width: 100%;
  height: 300rpx;
  border-top-left-radius: 15rpx;
  border-top-right-radius: 15rpx;
}
.rank-poster .mask{
	width: 100%;
	height: 100%;
	position: absolute;
	top:0;
	left:0;
	border-top-left-radius: 15rpx;
  	border-top-right-radius: 15rpx;
}
.rank-poster .mask-bottom{
	position: absolute;
	bottom: 20rpx;
	width: 100%;
	color:#fff;
	justify-content: center;
  font-size: 24rpx;
}
.rank-poster .mask-bottom .rule {
  display: flex;
  align-items: center;
  justify-content: center;
}
.rank-poster .mask-bottom .rule image {
  width: 22rpx;
  height: 22rpx;
  margin-right: 6rpx;
}
.rank-poster .border{
	margin:0 100rpx;
}
.rank-head {
  width: 100%;
  box-sizing: border-box;
  z-index: 10;
  font-size: 26rpx;
  background: #fff;
  padding: 0 30rpx 0 20rpx;
}

.rank-body {
  width: 100%;
  box-sizing: border-box;
  z-index: 10;
  font-size: 28rpx;
  background: #fff;
  padding: 0 30rpx 0 20rpx;
  border-bottom-left-radius: 15rpx;
  border-bottom-right-radius: 15rpx;
}

.rank-row {
  display: flex;
  align-items: center;
  border-bottom: 1px solid #e7e7e7;
  padding: 15rpx 0;
  /*padding: 150rpx 0;*/
}

.rank-head .rank-row {
  padding: 10rpx 0 !important;
}

.rank-column {
  text-align: center;
}

.rank-num {
  width: 90rpx;
  text-align: center;
}

.rank-body .rank-num {
  color: #b3b3b3;
  font-size: 32rpx;
}

.rank-body .top3 {
  position: relative;
}

.rank-body .top3 image {
  width: 55rpx;
  height: 55rpx;
}

.rank-body .top3 text {
  position: absolute;
  left: 50%;
  top: 30%;
  font-size: 20rpx;
  color: #fff;
  margin: 0 0 0 -5rpx;
}

.rank-player {
  flex: 1;
  text-align: left;
  box-sizing: border-box;
  padding-left: 72rpx;
}

.rank-body .rank-player {
  display: flex;
  align-items: center;
  justify-content: flex-start;
  padding-left: 0;
}

.rank-body .rank-player image {
  width: 70rpx;
  height: 70rpx;
  /*height: 770rpx;*/
  border-radius: 50%;
  margin: 0 8rpx;
}

.rank-zhuli {
  width: 110rpx;
}

.rank-body .rank-zhuli {
  display: flex;
  align-items: center;
  justify-content: center;
  color: #b4b4b4;
}

.rank-body .rank-zhuli image {
  width: 34rpx;
  height: 34rpx;
  margin-right: 6rpx;
}

.rank-body .rank-zhuli text {
  box-sizing: border-box;
  padding-top: 4rpx;
}

.rank-score {
  width: 150rpx;
  text-align: right;
  box-sizing: border-box;
}

.rank-head .rank-score {
  padding-right: 20rpx;
}

.rank-body .rank-score {
  color: #367be9;
}

.rank-score text {
  font-weight: bold;
  font-size: 30rpx;
  margin-right: 3rpx;
}

.rank-my {
  background-image: linear-gradient(to right, rgba(111, 48, 244, 1) 2%, rgba(111, 48, 244, 0.95) 10%, rgba(54, 123, 233, 0.95) 80%, rgba(54, 123, 233, 0.9));
  position: fixed;
  bottom: 0;
  left: 0;
  height: 120rpx;
  width: 100%;
  z-index: 60;
  display:flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 40rpx;
  box-sizing: border-box;
  color: #fff;
  font-size: 26rpx;
}

.rank-my>view {
  display: flex;
  align-items: center;
}

.rank-my-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  border: 2px solid #fff;
  margin: 0 8rpx;
}

.rank-my-result {
  text-align: right;
}

.rank-my-score {
  color: #ffea00;
  font-size: 38rpx;
}

.rank-my-btn-item {
  width: 170rpx;
  box-sizing: border-box;
  background: #6680f3;
  border: 2px solid #fff;
  border-radius: 40rpx;
  padding: 6rpx 0;
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 26rpx;
  font-weight: bold;
}

.rank-my-btn-item:nth-child(1) {
  margin-right: 10rpx;
}

.people-white {
  width: 34rpx;
  height: 34rpx;
  margin-right: 6rpx;
}

.rarraw-dot {
  width: 13.2rpx;
  height: 22rpx;
  margin-right: 0;
  margin-left: 4rpx;
}

.rank-my-btn-item>view {
  margin-right: 6rpx;
}

.rank-my-btn-item>view:last-child {
  margin-right: 0;
}

.flex{
	display: flex;
	flex-direction: row;
	justify-content: space-between;
	align-items: center;
}

.zhuli-pop {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.7);
  z-index: 60;
}

.zhuli-pop-box {
  position: absolute;
  top: 350rpx;
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
}

.zhuli-pop-box-head {
  background: #fff;
  border-radius: 15rpx;
  padding: 40rpx 50rpx 30rpx 45rpx;
  font-size: 30rpx;
}

.zhuli-pop-box-info {
  display: flex;
  align-items: center;
  justify-content: center;
}

.zhuli-pop-box-info image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-right: 30rpx;
}

.zhuli-pop-box-user text {
  color: #367be9;
  margin: 0 3rpx;
}

.zhuli-pop-box-tips {
  font-size: 28rpx;
  color: #666666;
  background: #f4f4f4;
  padding: 15rpx 30rpx 15rpx 15rpx;
  margin-top: 10rpx;
  border-radius: 15rpx;
  position: relative;
}

.zhuli-pop-box-tips view {
  position: absolute;
  top: 10rpx;
  left: -13rpx;
  width: 0;
  height: 0;
  border-top: 20px solid #f4f4f4;
  border-left: 10px solid transparent;
}

.zhuli-pop-box-btn {
  display:flex;
  align-items:center;
  justify-content:center;
  margin-top: 50rpx;
}

.zhuli-pop-box-btn>view {
  text-align: center;
  color: #fff;
  background: #367be9;
  padding: 15rpx 50rpx;
  border-radius: 30rpx;
}

.zhuli-pop-close {
  position: absolute;
  bottom: 0;
  margin-bottom: -160rpx;
  width: 40px;
  height: 40px;
  background: #fff;
  border-radius: 50%;
  padding: 6px;
}

.zhuli-pop-close:before{
  content: '';
  position: absolute;
  width: 20px;
  height: 2px;
  left: 50%;
  top: 50%;
  margin-left: -10px;
  margin-top: -1px;
  background-color: #666;
  transform: rotate(45deg);
}

.zhuli-pop-close:after {
  content: '';
  position: absolute;
  width: 2px;
  height: 20px;
  left: 50%;
  top: 50%;
  margin-left: -1px;
  margin-top: -10px;
  background-color: #666;
  transform: rotate(45deg);
}

.ruleBox{
  width: 100%;
  height: 100%;
  background-color:rgba(0,0,0,0.5);
  position: absolute;
  top:0;
  box-sizing: border-box;
  padding: 200rpx 80rpx;
}
.ruleBody{
  width: 100%;
  background-color: #fff;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
  border-radius: 8rpx;
}
.ruleHead{
  height: 100rpx;
  line-height: 100rpx;
}
.ruleBtn{
  height: 100rpx;
  line-height: 100rpx;
  color: #367be9;
  width: 100%;
  text-align: center;
}
.ruleCont{
  width: 100%;
  box-sizing: border-box;
  padding: 0 30rpx 30rpx 30rpx;
  font-size: 30rpx;
  border-bottom: 1px solid #eee;
}
