<!--pages/more-game/more-game.wxml-->
<view style='width: 100%; height: 100%;'>
<scroll-view scroll-x="true" class="weui-navbar" scroll-into-view="{{topView}}">
    <block wx:for-items="{{tabs}}" wx:key='key'>
        <view  class="{{activeIndex == index ?'item_on':''}} default-item" bindtap="tabClick" style="width:{{tabW}}px" data-item='{{item.name}}'>
          <view class="navbar-title">
            {{item.name}}
          </view>
        </view>
    </block>
    <view class="weui-navbar-slider" style="transform:translateX({{slideOffset}}px);"></view>
</scroll-view>

<swiper current="{{activeIndex}}" class="swiper-box" bindchange="bindChange" style="height: {{swiperHeight}}px">
  <block wx:for="{{tabs}}" wx:key='key'>
     <swiper-item>
    <view class="gamebox-games">
      <scroll-view scroll-y style='height: {{scrollHeight}}px'>
        <block wx:for="{{games[activeIndex]}}" wx:key="*this">
        <xcx-navigator nav-class="gamebox-item" game="{{item}}">
          <view class="gamebox-item-logo">
            <image src="{{item.logo}}" />
          </view>
          <view class="gamebox-item-info">
            <view>{{item.name}}</view>
            <view class="gamebox-item-info_desc">{{item.desc}}</view>
          </view>
          <view class="gamebox-item-play">开始</view>
        </xcx-navigator>
        </block>
      </scroll-view>
    </view>
    </swiper-item>
  </block>
</swiper>

<view class="ad">
  <ad unit-id="adunit-aca0430fe657a9b6"></ad>
</view>
</view>
