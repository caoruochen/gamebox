.help{
	position: fixed;
	top: 0;
	left: 0;
	width: 100%;
	height: 100%;
  background-image: linear-gradient(to bottom, rgba(54, 123, 233, 1) 5%, rgba(54, 123, 233, 0.95) 10%, rgba(54, 123, 233, 0.9));
	box-sizing: border-box;
	padding: 0 50rpx;
	z-index: 1000;
  display: flex;
	flex-direction: column;
	justify-content: flex-start;
	align-items: center;
}

.help-head {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  position: relative;
  width:100%;
  margin-top: 10rpx;
}

.help-close {
  position: absolute;
  top: 30rpx;
  right: 0;
  width: 30px;
  height: 30px;
  background: #274b8d;
  border-radius: 50%;
  padding: 2px;
}

.help-close:before{
  content: '';
  position: absolute;
  width: 14px;
  height: 2px;
  left: 50%;
  top: 50%;
  margin-left: -7px;
  margin-top: -1px;
  background-color: #fff;
  transform: rotate(45deg);
}

.help-close:after {
  content: '';
  position: absolute;
  width: 2px;
  height: 14px;
  left: 50%;
  top: 50%;
  margin-left: -1px;
  margin-top: -7px;
  background-color: #fff;
  transform: rotate(45deg);
}

.help-head image {
  border-top-left-radius: 30rpx;
  border-top-right-radius: 30rpx;
}

.help-people {
  width: 40%;
  z-index:10;
}

.help-head .help-lines {
  position: absolute;
  width:100%;
  left:0;
  top: 130rpx;
}

.help-head .help-lines image {
  position: absolute;
  top: 0;
  left: 0;
  z-index: 20;
  width: 100%;
}

.help-line2 {
  z-index: 5 !important;
}

.help-box {
  background: #fff;
  width:100%;
  margin-top:-40rpx;
  z-index:30;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  font-size: 30rpx;
  padding-bottom: 30rpx;
  border-bottom-left-radius: 30rpx;
  border-bottom-right-radius: 30rpx;
}

.help-box-title {
  font-size: 36rpx;
  font-weight: bold;
  margin-top: 5rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
}

.help-box-title-line {
  width: 40rpx;
  height: 1px;
  background: #e9e9e9;
}

.help-box-title view:nth-child(2) {
  text-align:center;
  margin:0 50rpx;
}

.help-box-rule {
  color: #999;
  font-size: 20rpx;
  text-align: center;
  margin: 5rpx 0 15rpx 0;
}

.help-box-friends {
  flex: 1;
  width: 100%;
  font-size: 26rpx;
}

.help-box-friends-row:nth-child(1) {
  background: #f1f1f1;
  margin: 0 0 10rpx 0;
  padding: 4rpx 40rpx 4rpx 50rpx !important;
  font-size: 26rpx;
}

.help-box-friends-row {
  display: flex;
  align-items: center;
  box-sizing: border-box;
  padding: 10rpx 0;
  margin: 0 40rpx;
  border-bottom: 1rpx solid #e9e9e9;
}

.help-box-friends-row:nth-child(6) {
  border-bottom: none;
}

.help-box-friends-user {
  flex: 1;
  display: flex;
  align-items: center;
  font-weight: bold;
}

.help-box-friends-user:nth-child(1) {
  font-weight: normal;
  color:#666;
}

.help-box-friends-user view {
  max-width: 160rpx;
  overflow-x: scroll;
  height: 40rpx;
}

.help-box-friends-user image {
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  margin-right: 4rpx;
}

.help-box-friends-score {
  width: 150rpx;
  height: 40rpx;
  overflow-x: scroll;
  text-align: center;
  color: #666;
}

.help-box-friends-op {
  width: 50rpx;
  text-align: center;
  box-sizing: border-box;
  position: relative;
}

.help-box-friends-op image {
  width: 40rpx;
  height: 40rpx;
}

.help-box-invite {
  display: flex;
  width: 100%;
  align-items: center;
  justify-content: center;
  margin-top: 15rpx;
}

.help-box-invite-btn {
  font-size: 32rpx;
  color: #517BF7;
  padding: 6rpx 24rpx;
  border: 1px solid #517BF7;
  border-radius: 40rpx;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
}

.help-box-invite-btn image {
  width: 34rpx;
  height: 34rpx;
}

.yaoqing-btn {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  opacity:0;
}

.help-foot {
  position: relative;
}

.help-foot .help-close {
  right: 50%;
  margin-right: -15px;
  padding: 6px;
  top: 40rpx;
}