<!--pages/more-game/more-game.wxml-->
<view>
  <!-- <input placeholder="请输入要搜索的内容" class="input"></input> -->
  <view class="swiper-tab">
    <view class="swiper-tab-list {{currentTab==0 ? 'on' : ''}}" data-current="0" bindtap="switchNav">常玩</view>
    <view class="swiper-tab-list {{currentTab==1 ? 'on' : ''}}" data-current="1" bindtap="switchNav">休闲</view>
    <view class="swiper-tab-list {{currentTab==2 ? 'on' : ''}}" data-current="2" bindtap="switchNav">益智</view>
    <view class="swiper-tab-list {{currentTab==3 ? 'on' : ''}}" data-current="3" bindtap="switchNav">运动</view>
    <view class="swiper-tab-list {{currentTab==4 ? 'on' : ''}}" data-current="4" bindtap="switchNav">棋牌</view>
  </view>
  <swiper current="{{currentTab}}" bindchange="bindChange">
    <block wx:for="{{pageData}}" wx:key="">
      <swiper-item>
        <view class="item-content">
          <image src="http://img02.tooopen.com/images/20150928/tooopen_sy_143912755726.jpg" style="width: 180rpx; height: 180rpx; border-radius: 50%;"/>
          <view style="flex: 1; display: flex; flex-direction: column; margin: 10rpx;">
            <view style="flex: 1;">test1</view>
            <view>test2</view>
          </view>

          <view style="display: flex; flex-direction: column; justify-content: center">热度</view>
        </view>
      </swiper-item>
    </block>
  </swiper>
</view>
