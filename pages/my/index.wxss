.container {
  width: 100%;
  /*height: 100%;*/
  box-sizing: border-box;
  background-color: #eff2f6;
}

.my{
  background-image: linear-gradient(to bottom, #f6c749 0%, #f3b244 100%);
}
.my-info{
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 34rpx 40rpx 60rpx;
}
.my-info .avatar{
  display: block;
  padding: 4rpx;
  border-radius: 50%;
  background-color: #fff;
}

.my-info .avatar image{
  display: block;
  width: 132rpx;
  height: 132rpx;
  border-radius: 50%;
}
.base-info{
  display: flex;
  color: #0c0c0c;
}
.base-info > view{
  font-size: 40rpx;
  font-weight: bold;
} 
.base-info image{
  width: 32rpx;
  margin-left: 20rpx;
}

.base-info button {
  margin: 0;
}

.my-info .level{
  display: inline-block;
  padding: 4rpx 16rpx;
  border-radius: 30rpx;
  margin-top: 20rpx;
  background-color: #fff;
}
.my-info .level image{
  width: 20rpx;
  margin-right: 10rpx;
}
.my-info .level text{
  font-size: 20rpx;
}
.my-info .lottery image{
  display: block;
  width: 106rpx;
}
.user-info{
  flex: 1;
  margin-left: 24rpx;
  font-size: 28rpx;
}
.user-info .bottom-block{
  display: flex;
  align-items: center;
  margin-top: 18rpx;
}
.user-info .bottom-block .more{
  margin-left: 25px;
  font-size: 28rpx;
  color: red;
}
.user-info .my-fund{
  display: flex;
  align-items: center;
}
.user-info .my-fund text{
  font-size: 28rpx;
  color: #fff;
}
.user-info .my-fund image{
  width: 40rpx;
}
.user-info .packet{
  margin-left: 10rpx;
}
.user-info .withdraw{
  padding-top: 4rpx;
  margin-left: 10rpx;
  font-size: 30rpx;
  color: #f53c66;
}
.user-info .coins .coins-icon{
  margin-right: 8rpx;
}
.user-info .coins .diamond-icon{
  margin: 0 4rpx 0 12rpx;
}
.my .banner{
  display: flex;
  width: 90%;
  padding-bottom: 60rpx;
  margin: 0 auto;
}
.my .banner > view{
  display: flex;
  justify-content: space-between;
  flex: 1;
  padding: 22rpx 10rpx 50rpx 22rpx;
  border-radius: 10rpx;
  background-color: #fff;
}
.my .banner > view:last-child{
  margin-left: 3%;
}
.my .banner > view .left-icon{
  width: 40rpx;
}
.my .banner > view .center-block{
  flex: 1;
  margin-left: 16rpx;
}
.my .banner > view .center-block view:first-child{
  font-size: 14px;
  font-weight: bold;
  color: #000;
}
.my .banner > view .center-block view:last-child{
  font-size: 12px;
  color: #666;
  margin-top: 10rpx;
}
.my .banner > view .right-arrow{
  width: 20rpx;
  margin-top: 10rpx;
}

