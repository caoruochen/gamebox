/*  三个火枪手  */

.btns {
    display: flex;
    flex: row;
    border-bottom: 1rpx solid #e4e4e4;
}

 .header {
    display: flex;
    flex: row;
    border-bottom: 1rpx solid #e4e4e4;
} 

.header-0 {
    flex: 1;
    text-align: center;
    border-right: 1rpx solid #e4e4e4;
}
.header-1 {
    width: 100px;
    text-align: center;
}
/*  红包,打榜,抽奖  */
/*  未选中  */
.btn {
    flex: 1;
    text-align: center;
}
/*  选中  */
.selectedBtn {
    color: #f3b244;
    flex: 1; 
    text-align: center;
}

.scrollView {
    background: #f4f4f4;
    width: 100%;
    height: 100%;
}
