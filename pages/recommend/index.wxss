.container {
  position: relative;
  background: #eee;
  padding: 20px 0;
  height: 100%;
}

::-webkit-scrollbar{
  width: 0;
  height: 0;
  color: transparent;
}

.game-time {
  box-sizing: border-box;
  margin: 0 0 8px 23px;
  font-size: 12px;
  color: #666666;
}

.game-time view:nth-child(2) {
  font-size: 27px;
  font-weight: bold;
  color: #303030;
}

.game-item {
  position: relative;
  font-size: 14px;
  box-sizing: border-box;
  background: #fff;
  border-radius: 10px;
  margin: 0 15px 20px 15px;
  box-shadow: 0px 5px 15px #ccc;
}

.game-item-head {
  padding-top: 5px;
  padding-bottom: 20px;
  box-sizing: border-box;
  position: relative;
}

.game-item-head-time {
  position: relative;
  font-size: 27px;
  font-weight: bold;
  color: #303030;
  z-index: 100;
}

.game-item-body {
  position: relative;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
}

.game-item-poster {
  border-top-left-radius: 10px;
  border-top-right-radius: 10px;
}

.game-item-mask {
  position: absolute;
  top: 0;
  left: 0;
  border-top-left-radius: 10px;
  border-top-right-radius: 10px;
  background: rgba(0, 0, 0, 0.1);
}

.game-item-play {
  position: absolute;
  bottom: 20px;
  right: 20px;
  width: 60px;
  height: 60px;
}

.game-item-info {
  display: flex;  
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  padding: 15px;
}

.game-item-info-logo {
  height: 40px;
  width: 40px;
  margin-right: 10px;
  border-radius: 8px;
}

.game-item-info-desc {
  display: flex;
  flex-direction: column;
  font-size: 12px;
  color: #666666;
  font-weight: 550;
  flex: 1;
}

.game-item-info-desc view:nth-child(1) {
  font-weight: bold;
  font-size: 15px;
  margin-bottom: 2px;
  color: #303030;
}

.game-item-info-play {
  border: 1px solid #3884d8;
  font-size: 13px;
  color: #3884d8;
  border-radius: 15px;
  padding: 4px 15px;
}

