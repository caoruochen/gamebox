<!--pages/more-game/more-game.wxml-->
<view>
  <view class="swiper-tab" wx:for="{{tabs}}" wx:key="">
    <view class="swiper-tab-list" data-current="{{index}}" bindtap="switchNav">
      {{item.name}}
    </view>
  </view>
  <swiper current="{{currentTab}}" bindchange="bindChange">
    <block wx:for="{{pageData}}" wx:key="">
      <swiper-item>
        <view class="item-content">
          <image src="http://img02.tooopen.com/images/20150928/tooopen_sy_143912755726.jpg" style="width: 180rpx; height: 180rpx; border-radius: 50%;"/>
          <view style="flex: 1; display: flex; flex-direction: column; margin: 10rpx;">
            <view style="flex: 1;">test1</view>
            <view>test2</view>
          </view>

          <view style="display: flex; flex-direction: column; justify-content: center">热度</view>
        </view>
      </swiper-item>
    </block>
  </swiper>
</view>
