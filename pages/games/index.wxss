image{
  width: auto;
  height: auto;
}
.container {
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  background-color: #eff2f6;
}

.my{
  background-image: linear-gradient(bottom, #f6c749, #f3b244);
}
.my-info{
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20px 20px 25px;
}
.my-info .avatar{
  width: 60px;
  height: 60px;
  border-radius: 50%;
}
.base-info{
  display: flex;
}
.base-info > view{
  font-size: 19px;
  font-weight: bold;
} 
.base-info image{
  width: 16px;
  margin-left: 10px;
}
.my-info .level{
  display: inline-block;
  padding: 2px 8px;
  border-radius: 15px;
  margin-top: 10px;
  background-color: #fff;
}
.my-info .level image{
  width: 10px;
  margin-right: 5px;
}
.my-info .level text{
  font-size: 10px;
}
.my-info .lottery{
  display: flex;
  align-items: center;
  justify-content: center;
  width: 50px;
  height: 50px;
  line-height: normal;
  border: 1px solid #000;
  border-radius: 50%;
  font-size: 14px;
  white-space: pre-line;
}
.user-info{
  flex: 1;
  margin-left: 20px;
  font-size: 14px;
}
.user-info .coins{
  display: flex;
  align-items: center;
  margin-top: 5px;
}
.user-info .coins text{
  font-size: 15px;
}
.user-info .coins image{
  width: 20px;
}
.user-info .coins .coins-icon{
  margin-right: 4px;
}
.user-info .coins .diamond-icon{
  margin-left: 6px;
  margin-right: 2px;
}
.my .banner{
  display: flex;
  width: 90%;
  padding-bottom: 30px;
  margin: 0 auto;
}
.my .banner > view{
  display: flex;
  justify-content: space-between;
  flex: 1;
  padding: 11px 5px 25px 11px;
  border-radius: 5px;
  background-color: #fff;
}
.my .banner > view:last-child{
  margin-left: 3%;
}
.my .banner > view .left-icon{
  width: 20px;
}
.my .banner > view .center-block{
  flex: 1;
  margin-left: 8px;
}
.my .banner > view .center-block view:first-child{
  font-size: 14px;
  font-weight: bold;
  color: #000;
}
.my .banner > view .center-block view:last-child{
  font-size: 12px;
  color: #666;
  margin-top: 5px;
}
.my .banner > view .right-arrow{
  width: 10px;
  margin-top: 5px;
}

.my-tasks {
  margin-bottom: 100px;
}

.daily-task{
  background-color: #fff;
}
.daily-task .task-head{
  display: flex;
  justify-content: space-between;
  padding: 15px 8px 12px 10px;
  border-bottom: 1px solid #e4e4e4;
}
.daily-task .title{
  position: relative;
  padding-left: 13px;
  font-size: 15px;
  color: #666;
}
.daily-task .title:before{
  content: "";
  position: absolute;
  left: 0;
  width: 5px;
  height: 100%;
  background-color: #f3b244;
}
.daily-task .task-head > text{
  padding: 0;
  border-width: 0;
  margin: 0;
  line-height: normal;
  font-size: 12px;
  color: blue;
}
.task-item{
  display: flex;
  align-items: center;
  padding-left: 20px;
  padding-right: 10px;
}
.task-item .task-icon{
  width: 32px;
}
.task-item .right-block{
  display: flex;
  flex: 1;
  align-items: center;
  padding-top: 15px;
  padding-bottom: 12px;
  border-bottom: 1px solid #e4e4e4;
  margin-left: 10px;
}
.task-item:last-of-type .right-block{
  padding-bottom: 30px;
  border-bottom-width: 0;
}
.daily-task .task-info{
  display: flex;
  flex: 1;
  flex-direction: column;
  padding-bottom: 5px;
}
.daily-task .task-item .task-name{
  font-size: 15px;
  font-weight: bold;
  color: #111;
}
.daily-task .task-item .task-award{
  font-size: 13px;
  color: #666;
}
.daily-task .task-item .task-btn{
  line-height: normal;
  padding: 2px 15px;
  border: 1px solid rgba(0, 0, 0, 0.1);
  border-radius: 15px;
  font-size: 13px;
  color: #fff;
  background-color: rgba(0, 0, 0, 0.1);
}
.daily-task .task-item .task-btn.active{
  background-color: #f6c344;
  border: 1px solid #f6c344;
}

.all-tasks{
  padding-top: 12px;
  margin-bottom: 20px;
  font-size: 15px;
  color: #666;
  text-align: center;
}

.ad {
  bottom: 10px;
  padding-bottom: 0;
  position: fixed;
}

.icon {
  width: 145rpx;
  height: 145rpx;
  border-radius: 30rpx;
}

.game-title {
  color: #353535;
  font-size: 14px;
}

.game-desc {
  color: #b2b2b2;
  font-size: 11px;
}

.item_content {
  display: inline-flex;
  flex-direction: column;
  justify-content: center;
  width: 25%;
  margin-top: 20px;
  margin-bottom: 20px;
  align-items: center;
}