.container {
  position: relative;
  background-color: #fcfcfc;
  height: 100%;
}

.item-layout {
  position: relative;
  background-color: white;
  border-radius: 10px;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  padding: 20rpx;
  margin: 0 30rpx 30rpx 30rpx;
  box-shadow: 0px 5px 15px #ccc;
}

.item-image {
  width: 100%;
  height: 130px;
  border-radius: 10px;
  margin-bottom: 20rpx;
}

.item-sub-layout {
  display: flex;
  flex-direction: row;
  width: 100%;
  justify-content: space-between;
  align-items: center;
}

.item-text-layout {
  display: flex;
  flex-direction: column;
  flex: 1;
}

.text-title {
  font-weight:bold;
  font-size:15px;
  margin-bottom:2px;
  color:#303030
}

.text-desc {
  font-size: 12px;
  font-weight: 500;
  color: #666666;
}

.item-btn {
  background-color: #F4E322;
  border-radius: 5px;
  font-size: 13px;
  width: 75px;
  height: 30px;
  line-height: 30px;
  text-align: center;
  box-sizing: border-box;
}

::-webkit-scrollbar{
  width: 0;
  height: 0;
  color: transparent;
}