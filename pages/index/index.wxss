page {
  height: 100%;
}
.container {
  display: flex;
  flex-direction: column;
  height: 100%;
}
.content {
  flex: 1;
   margin-top: 80rpx;
}
.divider {
  background-color: red;
  width: 100%;
  height: 1rpx;
}
.top-bar {
  position: fixed;
  z-index: 12;
  background-color: #fff;
  line-height: 80rpx;
  width: 100%;
  display: flex;
  flex-direction: row;
}
.item_title_size {
  display: flex;
  flex-direction: row;
  margin-left: 30rpx;
  line-height: 90rpx;
}
.item_content {
  display: inline-flex;
  flex-direction: column;
  justify-content: center;
  width: 25%;
  align-items: center;
}
.scroll-view_H {
  width: 100%;
  white-space: nowrap;
}
.ad_image {
  flex: 1;
  height: 180rpx;
  padding-left: 20rpx;
  padding-right: 20rpx;
}
 ::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}
