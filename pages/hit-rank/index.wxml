  <!-- 活动内容 -->

  <view class="activitys">
  <view class="item-layout" wx:for="{{activitys}}" wx:key="aid}">

      <!-- <view style="z-index: 10;">名字</view> -->
       <image lazy-load="{{true}}" 
        mode="aspectFill" 
        src="{{item.banner}}"
        bindtap="clickJumpPage"
        data-aid="{{item.aid}}"
        style="width: 100%; height: 180px; border-top-left-radius: 15px; border-top-right-radius: 15px;"/>

        <view class="match-info-mask"/>
         <!--参赛信息-->
        <view class="match-info-layout match-info-text" bindtap="clickJumpPage" data-aid = "{{item.aid}}">
          <view class="match-info-top-layout ">
            <view>{{item.name}}</view>
            <view class="match-status-text">进行中</view>
          </view>

          <view>未参赛</view>
          <view>{{item.rank}}</view>
          <view>已有{{item.playerNum}}人参赛</view>
        </view>

        <view class="game-info-layout">
          <image src="{{item.logo}}"
          class="avatar-image"/>
          <view class="game-title-text">{{item.gname}}</view>
        </view>
       
         
        <view class="btn-layout">
          <view class="btn-white-hollow">邀请好友</view>
          <xcx-navigator game="{{item}}">
          <view class="btn-blue-soild">立即参赛</view>
          </xcx-navigator>
        </view>

        <!-- 活动简介 -->
        <view class="activity-desc-layout">
          <view class="{{activitys[index].isFold ? 'activity-desc-collapse-text' : 'activity-desc-text'}}">{{item.desc}}</view>
          <view class="fold" bindtap="foldToggle" data-id="{{index}}">
             <image class="{{activitys[index].isFold ? 'arrow-down' : 'arrow-up'}}" src="../../images/arrow.png"/>
          </view>
         
        </view>
  </view>
  </view>
</view>
