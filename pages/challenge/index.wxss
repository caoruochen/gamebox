.challenge{
	font-size:30rpx;
	background-color: #eee;
	padding: 20rpx 0 150rpx 0;
	/*padding-top: 20rpx;*/
}
.flex{
	display: flex;
	flex-direction: row;
	justify-content: space-between;
	align-items: center;
}

.ranks{
	width: 100%;
	background-color: #fff;
}
.list-item{
	width: 100%;
	height: 114rpx;
	border-bottom: 1px solid #eee;
	padding:0 32rpx;
	box-sizing: border-box;
}
.ranking{
	min-width: 60rpx;
	padding: 0 10rpx;
	font-size:36rpx;
}
.avatar{
	width: 74rpx;
	height: 74rpx;
	border-radius: 74rpx;
}
.name{
	display: flex;
	flex-direction: column;
	justify-content: space-between;
	margin-left: 20rpx;
}
.score{
	color: #666666;
}
.tz-btn{
	width: 128rpx;
	height: 54rpx;
	line-height: 54rpx;
	text-align: center;
	color:#ccbd0e;
	border-radius: 16rpx;
	border:1px solid #ccbd0e;
}

.myrank{
	width: 100%;
	height: 134rpx;
	padding:0 34rpx;
	box-sizing: border-box;
	background-color: #fff;
	position: fixed;
	bottom: 0;
	box-shadow: 0 -4rpx 20rpx #ddd;
}
.myname{
	margin-left: 20rpx;
	font-weight: 700;
}
.myscore{
	color: #ff9711;
}