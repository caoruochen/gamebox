.top-bar {
  position: fixed;
  z-index: 100;
  font-size: 14px;
  background-color: #fff;
  line-height: 80rpx;
  width: 100%;
  padding: 0 30rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: row;
  box-shadow: 0px 2px 15px #ededed;
  justify-content: space-between;
}

.top-bar image {
  width: 30rpx;  
  height: 30rpx;
  margin-right: 10rpx;
}

.top-bar .wel {
  font-size: 12px;
}

.top-bar .nick {
  font-weight: bold;  
  font-size: 18px;
}

.games {
  padding: 85rpx 30rpx 0 30rpx;
}

.content {
  box-sizing: border-box;
  padding: 30rpx 0;
  border-bottom: 1px solid #ededed;
}

.item-title {
  display: flex;
  flex-direction: row;
  line-height: 90rpx;
  justify-content: space-between;
}

.game-more {

}

.item_content {
  display: inline-flex;
  flex-direction: column;
  justify-content: center;
  width: 30%;
  align-items: center;
}
.scroll-view_H {
  width: 100%;
  white-space: nowrap;
}
.ad_image {
  flex: 1;
  height: 180rpx;
  padding-left: 20rpx;
  padding-right: 20rpx;
}
 ::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}
