<view class="container">
<block wx:for="{{games}}" wx:key="*this">
  <view class="useless">1</view>
  <view class="game-item">
    <view wx:if="{{item.time && item.time.length>0}}" class="game-item-head">
      <view class="highline"></view>
      <view class="game-item-head-time">{{item.time}}</view>
    </view>

    <view class="game-item-body" style="width: {{imgWidth}}px" data-ind="{{index}}" bindtap="changeVideo">
      <image class="game-item-poster" style="width: {{imgWidth}}px; height: {{imgHeight}}px;" src="{{item.poster}}" hidden="{{item.vshow}}" mode="aspectFill"></image>
      <view class="game-item-mask" style="width: {{imgWidth}}px; height: {{imgHeight}}px;">
        <image wx:if="{{item.vsrc && item.vsrc.length>0}}" class="game-item-play" hidden="{{item.vshow}}" src="../../images/play.png"></image>
      </view>
      <video wx:if="{{item.vsrc && item.vsrc.length>0}}" custom-cache="{{false}}" hidden="{{!item.vshow}}" style="width: {{imgWidth}}px; height: {{imgHeight}}px;" id="gvideo_{{index}}" src="{{item.vsrc}}" controls objectFit="{{fit}}" direction="{{item.direction}}" loop show-center-play-btn="{{false}}" binderror="videoError"></video>
    </view>

    <view class="game-item-info" data-ind="{{index}}">
      <image class="game-item-info-logo" src="{{item.logo}}"></image>
      <view class="game-item-info-desc">
        <view>{{item.name}}</view>
        <view>{{item.desc}}</view>
      </view>
      <!--view class="game-item-info-pros">
        <image hidden="{{!item.hasPros}}" src="../../images/pros.png"></image>
        <image hidden="{{item.hasPros}}" src="../../images/unpros.png"></image>
        <text>{{item.pros}}</text>
      </view-->
    </view>

    <view class="game-item-btn" bindtap="startGame" data-type="{{item.type}}" data-appid="{{item.appId}}" data-preview="{{item.bg}}">开始游戏</view>
  </view>
</block>
<view class="useless">1</view>

</view>
