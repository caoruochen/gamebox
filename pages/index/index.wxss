.top-bar {
  position: fixed;
  z-index: 100;
  font-size: 14px;
  background-color: #fff;
  line-height: 80rpx;
  width: 100%;
  padding: 0 30rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: row;
  box-shadow: 0px 2px 15px #ededed;
  justify-content: space-between;
}

.top-bar image {
  width: 30rpx;  
  height: 30rpx;
  margin-right: 10rpx;
}

.top-bar .wel {
  font-size: 12px;
}

.top-bar .nick {
  font-weight: bold;  
  font-size: 18px;
}

.games {
  padding: 85rpx 30rpx 0 30rpx;
}

.content {
  box-sizing: border-box;
  padding: 30rpx 0; 
  border-bottom: 1px solid #ededed;
}

.item-title {
  display: flex;
  flex-direction: row;
  line-height: 90rpx;
  justify-content: space-between;
}

.item-title .game-category {
  color: #0c0c0c;
  font-weight: bold;
}

.game-more {
  font-size: 12px;
  color: #353535;
  padding-left: 20rpx;
  box-sizing: border-box;
}

.scroll-view_H {
  width: 100%;
  white-space: nowrap;
}

.item_content {
  display: inline-flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin-left: 30rpx;
}

.scroll-view_H .item_content:nth-child(1) {
  margin-left: 0;  
}

.game-icon {
  border-radius: 30rpx;
}

.game-title {
  color: #353535;
  font-size: 14px;
  overflow-x: hidden;
  text-align: center;
}

.game-desc {
  color: #b2b2b2;
  font-size: 11px;
  text-align: center;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}
