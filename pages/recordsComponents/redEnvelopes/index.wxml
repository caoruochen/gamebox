<view class='records-class'>
    <view wx:for="{{dataList}}" wx:for-index="index" wx:for-item="item" wx:key="{{item.rid}}">
        <!-- 自定义组件的 {{celltype}} -->
        <view class='cell'>
            <view>
                <image class='icon' src='{{item.game.logo}}'></image>
            </view>
            <view class='content'>
                <view>
                    {{item.game.name}}: {{item.activity.name}}
                </view>
                <view>
                    {{item.ctime}}
                </view>
            </view>
            <view class='sum'>
                {{item.amount}}
            </view>
        </view>
    </view>
    <slot></slot>
</view>