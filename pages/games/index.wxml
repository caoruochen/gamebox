<view class="container">
  <view class="my">
    <view class="my-info">
      <image src="{{userInfo.avatar}}" class="avatar"></image>
      <view class="user-info">
        <view class="base-info">
          <view>{{userInfo.name}}</view>
          <image mode="widthFix" src="{{userInfo.sex > 0 ? '../../images/pros.png' : '../../images/unpros.png'}}"></image>
        </view>
        <view class="level">
          <image mode="widthFix" src="../../images/pros.png" class="level-icon"></image>
          <text>{{userInfo.title}}</text>
        </view>
        <view class="coins">
          <image mode="widthFix" src="../../images/pros.png" class="coins-icon"></image>
          <text>{{userInfo.coins}}</text>
          <image mode="widthFix" src="../../images/pros.png" class="diamond-icon"></image>
          <text>{{userInfo.points}}</text>
        </view>
      </view>
      <navigator url="/pages/lottery/index" class="lottery" bindtap="goLottery">抽\n奖</navigator>
    </view>
    <view class="banner">
      <view class="notification">
        <image mode="widthFix" src="../../images/pros.png" class="left-icon"></image>
        <view class="center-block">
          <view>通知</view>
          <view>红包活动</view>
        </view>
        <image mode="widthFix" src="../../images/pros.png" class="right-arrow"></image>
      </view>
      <view class="shop">
        <image mode="widthFix" src="../../images/pros.png" class="left-icon"></image>
        <view class="center-block">
          <view>通知</view>
          <view>红包活动</view>
        </view>
        <image mode="widthFix" src="../../images/pros.png" class="right-arrow"></image>
      </view>
    </view>
  </view>

  <view wx:if="{{!checkSwitch}}">
    <view class="daily-task">
      <view class="task-head">
        <view class="title">日常任务<text>({{1}}/{{tasks.length}})</text></view>
        <text>一键领取</text>
      </view>
      <view wx:for="{{tasks}}" wx:key="{{index}}}" class="task-item">
        <image src="{{item.icon}}" class="icon"></image>
        <view class="task-info">
          <view class="task-name">{{item.name}}</view>
          <view class="task-award">{{item.desc}}</view>
        </view>
        <button wx:if="{{!isLogin}}" open-type="getUserInfo" class="task-btn" bindgetuserinfo="onGotUserInfo">{{item.type == 1 ? (item.status > 0 ? '已签到' : '签到') : (item.status > 1 ? '已完成' : '去完成')}}</button>
        <button wx:elif="{{isLogin && item.type == 1}}" class="task-btn" bindtap="signIn">{{item.status > 0 ? '已签到' : '签到'}}</button>
        <navigator wx:elif="{{isLogin && item.type > 1}}" url="" class="task-btn" bindtap="doTask">{{item.status > 1 ? '已完成' : '去完成'}}</navigator>
      </view>
    </view>
    <view class="all-tasks">
      全部任务
    </view>
  </view>
  <view wx:else>
    <view class="item_content" wx:for="{{games}}"
       wx:key="" wx:for-index="idx" wx:for-item="game" 
       bindtap="clickGame" data-index="{{index}}" data-id="{{idx}}">
      <image class="icon" src="{{game.logo}}"></image>
      <text class='game-title'>{{game.name}}</text>
      <text class='game-desc'>{{game.playerNum}}人在玩IOS回访电话IOS</text>
    </view>
  </view>

  <ad unit-id="adunit-aca0430fe657a9b6"></ad>
  <ad unit-id="adunit-45cb07bb615f7ee9"></ad>

</view>
