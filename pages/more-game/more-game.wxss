  text-align: center;
  font-size: 32rpx;
  box-sizing: border-box;
  padding-bottom: 2px;
  /*height: 60rpx;*/
}
.weui-navbar .navbar-title{
  position: relative;
  display: inline-block;
}
.weui-navbar .item_on{
  position: relative;
  color: #f3b244;
}
