.container {
  height: 100%;
  width: 100%;
  box-sizing: border-box;
}

swiper {
  width: 100%;
}

.slide-image {
  width: 100%;
}

.gamebox-games {
  padding: 10px 0;
  box-sizing: border-box;
}

.gamebox-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  padding: 15px;
  border-bottom: 1px solid #eee;
}

.gamebox-item-logo {
  padding-right: 10px;
  display: flex;
  align-items: center;
}

.gamebox-item-logo image {
  width:  50px;
  height: 50px;
  border-radius: 5px;
}

.gamebox-item-info {
  flex: 1;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  justify-content: space-between;
}

.gamebox-item-info .gamebox-item-info_desc {
  font-size: 80%;
  color: #999;
  margin-top: 5px;
}

.gamebox-item-arrow1 {
  position: relative;
  width: 5px;
  height: 5px;
  border-top: 1px solid #999;
  border-right: 1px solid #999;
  transform:rotate(45deg);
  margin-right: 5px;
}

.gamebox-item-arrow {
  padding: 3px 7px;
  box-sizing: border-box;
  border: 1px solid #1f78d1;
  border-radius: 3px;
  color: #1f78d1;
  font-size: 14px;
  margin-right: 5px;
}
