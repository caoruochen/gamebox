<view class="container">
  <!-- 活动图片 -->
  <view class="activity-layout">
      <image lazy-load="{{true}}" 
        mode="aspectFill" 
        src="../../images/default-banner.png" 
        class="activity-image" 
        style="width:{{bannerImgWidth}}px; height:{{bannerImgHeight}}px;"/>
      <!-- 个人信息 -->
      <view class="personal-layout">
        <image src="../../images/voice.png" style="width: 20px; height: 16px;"/>
        <text class="marquee">我是测试文字移动的</text>
        <view style="width: 1px; height: 60rpx; background: #eee;"/>

        <view style="flex: 5; display: flex; flex-direction: row; justify-content: flex-end; align-items: center;">
          <text style="font-size: 12px;">我的红包：</text>
          <text style="font-size: 12px; color: #517BF7; font-weight: 800;">0</text>
          <text style="font-size: 12px;">元</text>
          <text class="blue-soild-btn">领取</text>
        </view>
      </view>
  </view>
  <!-- 活动内容 -->
  <view class="item-layout" wx:for="{{activitys}}" wx:key="aid}">

      <!-- <view style="z-index: 10;">名字</view> -->
       <image lazy-load="{{true}}" 
        mode="aspectFill" 
        src="{{item.banner}}"
        bindtap="clickJumpPage"
        data-aid="{{item.aid}}"
        style="width: 100%; height: 180px; border-top-left-radius: 15px; border-top-right-radius: 15px;"/>

        <view class="match-info-mask"/>
         <!--参赛信息-->
        <view class="match-info-layout match-info-text" bindtap="clickJumpPage" data-aid = "{{item.aid}}">
          <view class="match-info-top-layout ">
            <view>钢琴红包赛</view>
            <view style="margin-left: 10px; font-size: 11px; background: #4DE260">进行中</view>
          </view>

          <view>未参赛</view>
          <view>名次</view>
          <view>已有xx人参赛</view>
        </view>

        <view class="game-info-layout">
          <image src="{{item.logo}}"
          class="avatar-image"/>
          <view>{{item.name}}</view>
        </view>
       
         
        <view class="btn-layout">
          <view class="btn-white-hollow">邀请好友</view>
          <xcx-navigator game="{{item}}">
          <view class="btn-blue-soild">立即参赛</view>
          </xcx-navigator>
        </view>

        <!-- 活动简介 -->
        <view class="activity-desc-layout">
          <view class="{{activitys[index].isFold ? 'activity-desc-collapse-text' : 'activity-desc-text'}}">我是文本</view>
          <view class="fold" bindtap="foldToggle" data-id="{{index}}">
             <image class="{{activitys[index].isFold ? 'arrow-down' : 'arrow-up'}}" src="../../images/arrow.png"/>
          </view>
         
        </view>
  </view>
</view>
