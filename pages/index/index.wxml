<view>
  <swiper indicator-dots="{{false}}"
    autoplay="{{true}}" interval="{{5000}}" duration="{{1000}}" style="height:{{swiperHeight}}px !important;">
    <block wx:for="{{banners}}" wx:key="*this">
      <swiper-item>
        <image src="{{item.pic}}" class="slide-image" style="height:{{swiperHeight}}px; width:{{bannerImgWidth}}px"  bindtap="startGame" data-appid="{{item.appId}}" data-extra="{{item.extra}}" data-preview="{{item.bg}}" data-type="{{item.type}}" />
      </swiper-item>
    </block>
  </swiper>

  <!-- content -->
  <view class="games">
    <view class="content" wx:for="{{categorys}}" wx:key="">
      <view class="item-title">
        <view class="game-category">
          <view>
            <image src="{{item.icon ? item.icon : '../../images/hot-icon.png'}}"></image>
          </view>
          <view style="color: {{item.color ? item.color : '#0c0c0c;'}}">{{item.name}}</view>
        </view>
        <view class="game-more" bindtap="clickMore" data-type="{{item.type}}" data-id="{{index}}">更多</view>
      </view>
    <scroll-view class="scroll-view_H" scroll-x>
        <view class="item_content" wx:for="{{item.games}}"
        style="width: {{gameItemWidth}}px"
        wx:key="" wx:for-index="idx" wx:for-item="game" 
        bindtap="clickGame" data-index="{{index}}" data-id="{{idx}}">

          <image class="game-icon" src="{{game.logo}}" style="width: {{gameItemWidth}}px; height: {{gameItemWidth}}px;"/>
          <view style="width:{{gameItemWidth}}px;" class='game-title'>{{game.name}}</view>
          <view wx:if="{{game.playerNum}}" style="width:{{gameItemWidth}}px;" class='game-desc'>{{game.playerNum}}人在玩</view>
        </view>
      </scroll-view>
    </view>
  </view>

  <view class="ad" wx:if="{{adpos=='top'}}">
    <ad unit-id="adunit-a3868a599f8b3cfa"></ad>
  </view>

  <view class="gamebox-games">
    <view class="item-title">
      <view class="game-category">
        <view>
          <image src="../../images/more-icon.png"></image>
        </view>
        <view>游戏一览</view>
      </view>
      <view class="game-more" bindtap="clickMore" data-type="" data-id="">更多</view>
    </view>
    <block wx:for="{{games}}" wx:key="*this">
      <view class="gamebox-item" bindtap="startGame" data-appid="{{item.appId}}" data-extra="{{item.extra}}" data-type="{{item.type}}" data-preview="{{item.bg}}">
      <view class="gamebox-item-logo">
        <image src="{{item.logo}}" />
      </view>
      <view class="gamebox-item-info">
        <view>{{item.name}}
          <text wx:if="{{item.playerNum}}" class='gamebox-item-num'><text>{{item.playerNum}}人在玩</text></text>
        </view>
        <view class="gamebox-item-info_desc">{{item.desc}}</view>
      </view>
      <view class="gamebox-item-play">开始</view>
    </view>
    </block>
  </view>

  <view class="ad" wx:if="{{adpos!='top'}}">
    <ad unit-id="adunit-a3868a599f8b3cfa"></ad>
  </view>
</view>