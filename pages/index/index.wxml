<view class="container1">

<block>
  <view class="game-item">
    <view class="game-item-body" bindtap="changeVideo">
      <image src="{{poster}}" hidden="{{hidden}}" mode="aspectFill"></image>
      <video hidden="{{!hidden}}" id="myVideo" src="{{src}}" controls objectFit="{{fit}}" direction="0" loop show-center-play-btn="{{false}}" autoplay="autoplay" bindwaiting="waiting"></video>
    </view>
    <view class="game-item-info">
      <view class="game-item-info-head">
        <view class="game-item-info-head_logo">
          <image src="https://snsgame.uimg.cn/minigame/res/logo/wuxianlou.png"></image>
        </view>
        <view class="game-item-info-head_desc">
          <view>无限楼</view>
          <view>敏捷 反应力</view>
        </view>
      </view>
      <view class="game-item-info-foot">
        <view>9.1分 | 567人在玩</view>
        <view>2018.05.28</view>
      </view>
    </view>
    <view class="game-item-foot">
      <view>无限楼，比比谁最高</view>
    </view>
  </view>
</block>

</view>
