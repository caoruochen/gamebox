.card-box{
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-left: 30rpx;
  padding-right: 40rpx;
  margin-bottom: 20rpx;
  background-color: #fff;
  color: #111;
}
.welfare{
  margin-bottom: 0;
}
.card-box .title{
  padding: 36rpx 0;
  font-size: 32rpx;
  font-weight: bolder;
}
.card-box .right-arrow{
  width: 60rpx;
}

.daily-task{
  margin-bottom: 20rpx;
  background-color: #fff;
}
.task-item{
  display: flex;
  align-items: center;
  padding-left: 40rpx;
}
.task-item .task-icon{
  width: 50rpx;
}
.task-item .right-block{
  display: flex;
  flex: 1;
  align-items: center;
  padding: 15rpx 0;
  border-bottom: 1rpx solid #e4e4e4;
  margin-left: 30rpx;
  margin-right: 30rpx;
}
.task-item:last-child .right-block{
  border-bottom: none;
}

.daily-task .task-info{
  display: flex;
  flex: 1;
  flex-direction: column;
}
.daily-task .task-item .task-name{
  font-size: 13px;
  font-weight: bold;
  color: #111;
  margin-bottom: 4rpx;
}
.daily-task .task-item .task-award{
  font-size: 11px;
  color: #666;
}

.daily-task .task-item .task-status {
  position: relative;
  background-color: #f6c749;
  border-radius: 30rpx;
  width: 180rpx;
  height: 60rpx;
}

.daily-task .task-item .task-process {
  position: absolute;
  top: 0;
  left: 0;
  width: 0%;
  height: 100%;
  border-top-left-radius: 30rpx;
  border-bottom-left-radius: 30rpx;
  border-top-right-radius: 0;
  border-bottom-right-radius: 0;
  background-color: #ccc;
}

.daily-task .task-item .task-process_done {
  border-top-right-radius: 30rpx !important;
  border-bottom-right-radius: 30rpx !important;
}

.daily-task .task-item .task-btn {
  position: absolute;
  z-index: 100;
  top: 0;
  width: 100%;
  height: 100%;
  font-size: 12px;
  text-align: center;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  background: transparent;
}

.daily-task .task-item .task-btn_login {
  margin: 0 !important;
  padding: 0 !important;
  border: none !important;
  line-height: normal !important;
  border-radius: 0 !important;
  background-color: #f6c749 !important;
}

.games{
  background-color: #fff;
  margin-bottom: 20rpx;
  padding-bottom: 15rpx;
}

.games-box{
  padding:20rpx 30rpx 0 30rpx;
}
.scroll-view_H {
  width: 100%;
  white-space: nowrap;
}

.item_content {
  display: inline-flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin-left: 30rpx;
}

.scroll-view_H .item_content:nth-child(1) {
  margin-left: 0;  
}

.game-icon {
  border-radius: 30rpx;
}

.game-title {
  color: #353535;
  font-size: 24rpx;
  overflow-x: scroll;
  text-align: center;
  padding: 4rpx 0;
}

.game-desc {
  color: #b2b2b2;
  font-size: 11px;
  overflow-x: scroll;
  text-align: center;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.tips {
  text-align: center;
  color: #e4e4e4;
  font-size: 28rpx;
  padding-top: 20rpx;
  padding-bottom: 20rpx
}

