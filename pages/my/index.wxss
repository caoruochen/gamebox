image{
  width: auto;
  height: auto;
}
.container {
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  background-color: #eff2f6;
}

.my{
  background-image: linear-gradient(to bottom, #f6c749 0%, #f3b244 100%);
}
.my-info{
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 34rpx 50rpx 60rpx;
}
.my-info .avatar{
  display: block;
  padding: 4rpx;
  border-radius: 50%;
  background-color: #fff;
}

.my-info .avatar image{
  display: block;
  width: 132rpx;
  height: 132rpx;
  border-radius: 50%;
}
.base-info{
  display: flex;
  color: #0c0c0c;
}
.base-info > view{
  font-size: 40rpx;
  font-weight: bold;
} 
.base-info image{
  width: 32rpx;
  margin-left: 20rpx;
}

.base-info button {
  margin: 0;
}

.my-info .level{
  display: inline-block;
  padding: 4rpx 16rpx;
  border-radius: 30rpx;
  margin-top: 20rpx;
  background-color: #fff;
}
.my-info .level image{
  width: 20rpx;
  margin-right: 10rpx;
}
.my-info .level text{
  font-size: 20rpx;
}
.my-info .lottery image{
  display: block;
  width: 106rpx;
}
.user-info{
  flex: 1;
  margin-left: 24rpx;
  font-size: 14px;
}
.user-info .coins{
  display: flex;
  align-items: center;
  margin-top: 18rpx;
}
.user-info .coins text{
  font-size: 14px;
  color: #fff;
}
.user-info .coins image{
  width: 40rpx;
}
.user-info .coins .coins-icon{
  margin-right: 8rpx;
}
.user-info .coins .diamond-icon{
  margin: 0 4rpx 0 12rpx;
}
.my .banner{
  display: flex;
  width: 90%;
  padding-bottom: 60rpx;
  margin: 0 auto;
}
.my .banner > view{
  display: flex;
  justify-content: space-between;
  flex: 1;
  padding: 22rpx 10rpx 50rpx 22rpx;
  border-radius: 10rpx;
  background-color: #fff;
}
.my .banner > view:last-child{
  margin-left: 3%;
}
.my .banner > view .left-icon{
  width: 40rpx;
}
.my .banner > view .center-block{
  flex: 1;
  margin-left: 16rpx;
}
.my .banner > view .center-block view:first-child{
  font-size: 14px;
  font-weight: bold;
  color: #000;
}
.my .banner > view .center-block view:last-child{
  font-size: 12px;
  color: #666;
  margin-top: 10rpx;
}
.my .banner > view .right-arrow{
  width: 20rpx;
  margin-top: 10rpx;
}

.my-tasks {
  margin-bottom: 100px;
}

.daily-task{
  padding-bottom: 36rpx;
  background-color: #fff;
}
.daily-task .task-head{
  
}
.daily-task .top-bar-container{
  display: flex;
  justify-content: center;
  padding: 30rpx 0 24rpx 0;
  border-bottom: 1rpx solid #e4e4e4;
}
.daily-task .task-head .top-bar{
  flex: 1;
  text-align: center;
}
.daily-task .title{
  display: inline-block;
  position: relative;
  font-size: 30rpx;
  color: #666;
  text-align: center;
}
.daily-task .top-bar.active .title:before{
  content: "";
  position: absolute;
  top: 100%;
  left: 50%;
  width: 100%;
  height: 3px;
  transform: translateX(-50%);
  background-color: #f3b244;
}
.daily-task .task-head > text{
  padding: 0;
  border-width: 0;
  margin: 0;
  line-height: normal;
  font-size: 12px;
  color: blue;
}
.task-item{
  display: flex;
  align-items: center;
  padding-left: 40rpx;
}
.task-item .task-icon{
  width: 50rpx;
}
.task-item .right-block{
  display: flex;
  flex: 1;
  align-items: center;
  padding: 20rpx 30rpx 20rpx 0;
  border-bottom: 1rpx solid #e4e4e4;
  margin-left: 30rpx;
}

.daily-task .task-info{
  display: flex;
  flex: 1;
  flex-direction: column;
}
.daily-task .task-item .task-name{
  font-size: 13px;
  font-weight: bold;
  color: #111;
  margin-bottom: 4rpx;
}
.daily-task .task-item .task-award{
  font-size: 11px;
  color: #666;
}
.daily-task .task-item .task-btn{
  line-height: normal;
  padding: 12rpx 40rpx;
  border-radius: 30rpx;
  font-size: 12px;
  color: #fff;
  background-color: rgba(0, 0, 0, 0.1);
}
.daily-task .task-item .task-btn:after{
  border-width: 0;
}
.daily-task .task-item .task-btn.active{
  background-color: #f6c344;
}

.all-tasks{
  padding-top: 24rpx;
  margin-bottom: 40rpx;
  font-size: 14px;
  color: #666;
  text-align: center;
}

.ad {
  bottom: 20rpx;
  padding-bottom: 0;
  position: fixed;
}

.games-box{
  padding: 10rpx 30rpx;
  height: 100%;
  box-sizing: border-box;
}
.gamebox-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  padding: 16rpx 0;
  border-bottom: 1rpx solid #eee;
}

.gamebox-item-logo {
  padding-right: 16rpx;
  display: flex;
  align-items: center;
}

.gamebox-item-logo image {
  width:  80rpx;
  height: 80rpx;
  border-radius: 10rpx;
}

.gamebox-item-info {
  flex: 1;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  justify-content: space-between;
  font-size: 13px;
}

.gamebox-item-info .gamebox-item-info_desc {
  font-size: 11px;
  color: #999;
  margin-top: 6rpx;
}

.gamebox-item-num {
  font-size: 12px;
  text-align: center;
  margin-left: 30rpx;
}

.gamebox-item-num text {
  color: #ff0621;
}

.gamebox-item-play {
  border: 1rpx solid #3884d8;
  font-size: 13px;
  color: #3884d8;
  border-radius: 30rpx;
  padding: 6rpx 25rpx;
}