}
.top_one_size {
  margin-left: 30rpx;
  margin-right: 30rpx;
  line-height: 100rpx;
}
.top_two_size {
  margin-left: 30rpx;
  margin-right: 30rpx;
  line-height: 80rpx;
  display: flex;
  flex-direction: row;
}
.item_title_size {
  display: flex;
