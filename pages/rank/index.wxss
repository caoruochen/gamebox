.rank{
	font-size:30rpx;
	height:100%;
  width: 100%;
  overflow-x: hidden;
  position: relative;
  background-size: cover;
  box-sizing: border-box;
  padding: 20rpx 40rpx 130rpx 40rpx;
}

.rank .bg {
  width: 100%;
  height: 100%;
}

.rank-poster {
  width: 100%;
  height: 300rpx;
}

.rank-poster image {
  width: 100%;
  height: 300rpx;
  border-top-left-radius: 15rpx;
  border-top-right-radius: 15rpx;
}

.rank-head {
  width: 100%;
  box-sizing: border-box;
  z-index: 10;
  font-size: 26rpx;
  background: #fff;
  padding: 0 30rpx 0 20rpx;
}

.rank-body {
  width: 100%;
  box-sizing: border-box;
  z-index: 10;
  font-size: 28rpx;
  background: #fff;
  padding: 0 30rpx 0 20rpx;
  border-bottom-left-radius: 15rpx;
  border-bottom-right-radius: 15rpx;
}

.rank-row {
  display: flex;
  align-items: center;
  border-bottom: 1px solid #e7e7e7;
  padding: 15rpx 0;
}

.rank-head .rank-row {
  padding: 10rpx 0 !important;
}

.rank-column {
  text-align: center;
}

.rank-num {
  width: 90rpx;
  text-align: center;
}

.rank-body .rank-num {
  color: #b3b3b3;
  font-size: 32rpx;
}

.rank-body .top3 {
  position: relative;
}

.rank-body .top3 image {
  width: 55rpx;
  height: 55rpx;
}

.rank-body .top3 text {
  position: absolute;
  left: 50%;
  top: 30%;
  font-size: 20rpx;
  color: #fff;
  margin: 0 0 0 -5rpx;
}

.rank-player {
  flex: 1;
  text-align: left;
  box-sizing: border-box;
  padding-left: 72rpx;
}

.rank-body .rank-player {
  display: flex;
  align-items: center;
  justify-content: flex-start;
  padding-left: 0;
}

.rank-body .rank-player image {
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  margin: 0 8rpx;
}

.rank-zhuli {
  width: 110rpx;
}

.rank-body .rank-zhuli {
  display: flex;
  align-items: center;
  justify-content: center;
  color: #b4b4b4;
}

.rank-body .rank-zhuli image {
  width: 34rpx;
  height: 34rpx;
  margin-right: 6rpx;
}

.rank-body .rank-zhuli text {
  box-sizing: border-box;
  padding-top: 4rpx;
}

.rank-score {
  width: 150rpx;
  text-align: right;
  box-sizing: border-box;
}

.rank-head .rank-score {
  padding-right: 20rpx;
}

.rank-body .rank-score {
  color: #367be9;
}

.rank-score text {
  font-weight: bold;
  font-size: 30rpx;
  margin-right: 3rpx;
}

.rank-my {
  background-image: linear-gradient(to right, rgba(111, 48, 244, 1) 2%, rgba(111, 48, 244, 0.95) 10%, rgba(54, 123, 233, 0.95) 80%, rgba(54, 123, 233, 0.9));
  position: fixed;
  bottom: 0;
  left: 0;
  height: 120rpx;
  width: 100%;
  z-index: 60;
  display:flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 40rpx;
  box-sizing: border-box;
  color: #fff;
  font-size: 26rpx;
}

.rank-my>view {
  display: flex;
  align-items: center;
}

.rank-my-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  border: 2px solid #fff;
  margin: 0 8rpx;
}

.rank-my-result {
  text-align: right;
}

.rank-my-score {
  color: #ffea00;
  font-size: 38rpx;
}

.rank-my-btn-item {
  width: 170rpx;
  box-sizing: border-box;
  background: #6680f3;
  border: 2px solid #fff;
  border-radius: 40rpx;
  padding: 6rpx 0;
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 26rpx;
  font-weight: bold;
}

.rank-my-btn-item:nth-child(1) {
  margin-right: 10rpx;
}

.people-white {
  width: 34rpx;
  height: 34rpx;
  margin-right: 6rpx;
}

.rarraw-dot {
  width: 13.2rpx;
  height: 22rpx;
  margin-right: 0;
  margin-left: 4rpx;
}

.rank-my-btn-item>view {
  margin-right: 6rpx;
}

.rank-my-btn-item>view:last-child {
  margin-right: 0;
}

