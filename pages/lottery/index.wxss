.container{
  height: 100%;
  overflow: hidden;
  background-color: #fff8b9;
}
.turntable{
  position: relative;
  width: 80%;
  margin: 20% auto 0;
}
.turntable image{
  display: block;
  width: auto;
  height: auto;
}
.turntable .pointer{
  width: 30%;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  z-index: 2;
}
.turntable .rotate{
  width: 86%;
  height: 86%;
  position: absolute;
  left: 7%;
  top: 7%;
  transform: rotate(30deg);
}
.turntable .rotate image{
  width: 100%;
  height: 100%;
}
.turntable-bg{
  width: 100%;
  height: auto;
}
.left-coin{
  margin-top: 70rpx;
  font-size: 13px;
  color: #71675b;
  text-align: center;
}
.left-coin text{
  padding-left: 20rpx;
  color: #f3bc0a;
}
.tips{
  width: 100%;
  position: absolute;
  bottom: 30rpx;
  font-size: 12px;
  color: #71675b;
  text-align: center;
}
.tips text{
  padding-left: 20rpx;
  font-size: 11px;
  color: #3283b0;
}